  <body>
 
    <style>
body{
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: linear-gradient(100deg, #020024 0%, #090979 35%, #00d4ff 100%);
    height: 100vh;
    overflow: hidden;
}
.center{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 400px;
    background-color: aliceblue;
    border-radius: 1rem;
}
.center h1{
    font-size: 1.9rem;
    color:#090979;
    text-align: center;
    text-transform: uppercase;
    padding: 0 0 20px 0;
    border-bottom: 0.7px solid #090979;
}
.center form{
    padding: 0 40px;
    box-sizing: border-box;
}
form .txtField{
    position: relative;
    border-bottom: 2px solid #adadad;
    margin: 30px 0;
}
.txtField input{
    width: 100%;
    padding: 0 5px;
    height: 40px;
    font-size: 1.2rem;
    border: none;
    background: none;
    outline: none;
}
.txtField label{
    position: absolute;
    top: 50%;
    left: 5px;
    color: #adadad;
    transform: translateY(-50%);
    font-size: 1.4rem;
    pointer-events: none;
    transition: .5s;
}
.txtField span::before{
    content: '';
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    height: 2px;
    background: #090979
}
.txtField input:focus ~label,
.txtField input:valid ~label{
    top: -5px;
    color: #090979;
}
.txtField input:focus ~span::before,
.txtField input:valid ~span::before{
    width: 100%;
}

.submit{
    text-align: center;
    width: 20rem;
    height: 2.3rem;
    border: 2px solid;
    background: #090979;
    border-radius: 1.3rem;
    font-size: 1.6rem;
    color: #e9f4fb;
    font-weight: 700;
    cursor: pointer;
    outline: none;
    margin-bottom: 10px;
}
.ingresar:hover{
    border: 2.5px solid #090979;
    transition: 1s;
}
.logo_v{
    width: 180px;
    height: 180px;
    margin-left: 7.1rem;
    border-radius: 2rem;
}
.ingresar{
    text-align: center;
    text-decoration: none;
    color: #e9f4fb;
    font-size: 1.7rem;
    margin: 3.1rem;
    padding: 0.5rem 4rem;
    border-radius: 2rem;
    background: #090979;
    border: 2px solid;
}


    </style>

  <main class="main__contenedor">
    {{{body}}}
  </main>


  </body>
</html>